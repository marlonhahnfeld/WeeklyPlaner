<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/WeekActivityLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/yourWeek"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/backButtonWeekActivity"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:text="@string/yourWeek"
        android:textAlignment="center"
        android:textSize="50sp" />

    <Button
        android:id="@+id/montag"
        android:layout_width="300dp"
        android:layout_height="65dp"
        android:layout_below="@+id/yourWeek"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15dp"
        android:backgroundTint="@color/black"
        android:text="@string/montag"
        android:textAlignment="viewStart" />

    <Button
        android:id="@+id/dienstag"
        android:layout_width="300dp"
        android:layout_height="65dp"
        android:layout_below="@+id/montag"
        android:layout_centerHorizontal="true"
        android:backgroundTint="@color/black"
        android:text="@string/dienstag"
        android:textAlignment="viewStart" />

    <Button
        android:id="@+id/mittwoch"
        android:layout_width="300dp"
        android:layout_height="65dp"
        android:layout_below="@+id/dienstag"
        android:layout_centerHorizontal="true"
        android:backgroundTint="@color/black"
        android:text="@string/mittwoch"
        android:textAlignment="viewStart" />

    <Button
        android:id="@+id/donnerstag"
        android:layout_width="300dp"
        android:layout_height="65dp"
        android:layout_below="@+id/mittwoch"
        android:layout_centerHorizontal="true"
        android:backgroundTint="@color/black"
        android:text="@string/donnerstag"
        android:textAlignment="viewStart" />

    <Button
        android:id="@+id/freitag"
        android:layout_width="300dp"
        android:layout_height="65dp"
        android:layout_below="@+id/donnerstag"
        android:layout_centerHorizontal="true"
        android:backgroundTint="@color/black"
        android:text="@string/freitag"
        android:textAlignment="viewStart" />

    <Button
        android:id="@+id/samstag"
        android:layout_width="300dp"
        android:layout_height="65dp"
        android:layout_below="@+id/freitag"
        android:layout_centerHorizontal="true"
        android:backgroundTint="@color/black"
        android:text="@string/samstag"
        android:textAlignment="viewStart" />

    <Button
        android:id="@+id/sonntag"
        android:layout_width="300dp"
        android:layout_height="65dp"
        android:layout_below="@+id/samstag"
        android:layout_centerHorizontal="true"
        android:backgroundTint="@color/black"
        android:text="@string/sonntag"
        android:textAlignment="viewStart" />

    <ImageButton
        android:id="@+id/backButtonWeekActivity"
        android:layout_width="65dp"
        android:layout_height="50dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:backgroundTint="#00F8F5F5"
        android:contentDescription="@string/back"
        app:srcCompat="?attr/homeAsUpIndicator"
        app:tint="#000000" />

</RelativeLayout>