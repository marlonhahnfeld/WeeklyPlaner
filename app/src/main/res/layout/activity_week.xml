<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/WeekActivityLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/gray_Termin"
    tools:context=".MainActivity">

    <!-- TODO: Button für zukünftige Termine muss angelegt werden -->
    <RelativeLayout
        android:id="@+id/cardViewLayout"
        android:layout_width="match_parent"
        android:layout_height="220dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp">

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:layout_marginTop="-45dp"
            android:layout_marginBottom="5dp"
            android:elevation="10dp"
            app:cardCornerRadius="50dp">

            <ImageView
                android:id="@+id/imageView"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:contentDescription="@string/background"
                android:scaleType="centerCrop"
                android:src="@drawable/cloudbackground_purple" />
        </androidx.cardview.widget.CardView>
    </RelativeLayout>

    <ImageButton
        android:id="@+id/backButtonWeekActivity"
        android:layout_width="65dp"
        android:layout_height="50dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:backgroundTint="#00F8F5F5"
        android:contentDescription="@string/back"
        app:srcCompat="?attr/homeAsUpIndicator"
        app:tint="@color/white"
        tools:ignore="ImageContrastCheck" />

    <TextView
        android:id="@+id/yourWeek"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="100dp"
        android:fontFamily="@font/gothammedium1"
        android:text="@string/yourWeek"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="50sp"
        tools:ignore="TextContrastCheck" />

    <TextView
        android:id="@+id/weekDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/white"
        android:textSize="30sp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="150dp"/>

    <RelativeLayout
        android:id="@+id/montagLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/cardViewLayout"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="0dp">

        <Button
            android:id="@+id/montag"
            android:layout_width="300dp"
            android:layout_height="65dp"
            android:layout_centerHorizontal="true"
            android:backgroundTint="@color/black"
            android:text="@string/montag"
            android:textAlignment="viewStart"
            android:textSize="22sp" />

        <TextView
            android:id="@+id/doneMo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="25dp"
            android:layout_marginEnd="100dp"
            android:fontFamily="@font/gothammedium1"
            android:textColor="@android:color/white"
            android:textSize="14sp"
            tools:ignore="RelativeOverlap" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/dienstagLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/montagLayout"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="5dp">

        <Button
            android:id="@+id/dienstag"
            android:layout_width="300dp"
            android:layout_height="65dp"
            android:layout_centerHorizontal="true"
            android:backgroundTint="@color/black"
            android:text="@string/dienstag"
            android:textAlignment="viewStart"
            android:textSize="22sp" />

        <TextView
            android:id="@+id/doneDi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="25dp"
            android:layout_marginEnd="100dp"
            android:fontFamily="@font/gothammedium1"
            android:textColor="@android:color/white"
            android:textSize="14sp"
            tools:ignore="RelativeOverlap" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/mittwochLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/dienstagLayout"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="5dp">

        <Button
            android:id="@+id/mittwoch"
            android:layout_width="300dp"
            android:layout_height="65dp"
            android:layout_centerHorizontal="true"
            android:backgroundTint="@color/black"
            android:text="@string/mittwoch"
            android:textAlignment="viewStart"
            android:textSize="22sp" />

        <TextView
            android:id="@+id/doneMi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="25dp"
            android:layout_marginEnd="100dp"
            android:fontFamily="@font/gothammedium1"
            android:textColor="@android:color/white"
            android:textSize="14sp"
            tools:ignore="RelativeOverlap" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/donnerstagLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/mittwochLayout"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="5dp">

        <Button
            android:id="@+id/donnerstag"
            android:layout_width="300dp"
            android:layout_height="65dp"
            android:layout_centerHorizontal="true"
            android:backgroundTint="@color/black"
            android:text="@string/donnerstag"
            android:textAlignment="viewStart"
            android:textSize="22sp" />

        <TextView
            android:id="@+id/doneDo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="25dp"
            android:layout_marginEnd="100dp"
            android:fontFamily="@font/gothammedium1"
            android:textColor="@android:color/white"
            android:textSize="14sp"
            tools:ignore="RelativeOverlap" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/freitagLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/donnerstagLayout"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="5dp">

        <Button
            android:id="@+id/freitag"
            android:layout_width="300dp"
            android:layout_height="65dp"
            android:layout_centerHorizontal="true"
            android:backgroundTint="@color/black"
            android:text="@string/freitag"
            android:textAlignment="viewStart"
            android:textSize="22sp" />

        <TextView
            android:id="@+id/doneFr"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="25dp"
            android:layout_marginEnd="100dp"
            android:fontFamily="@font/gothammedium1"
            android:textColor="@android:color/white"
            android:textSize="14sp"
            tools:ignore="RelativeOverlap" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/samstagLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/freitagLayout"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="5dp">

        <Button
            android:id="@+id/samstag"
            android:layout_width="300dp"
            android:layout_height="65dp"
            android:layout_centerHorizontal="true"
            android:backgroundTint="@color/black"
            android:text="@string/samstag"
            android:textAlignment="viewStart"
            android:textSize="22sp" />

        <TextView
            android:id="@+id/doneSa"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="25dp"
            android:layout_marginEnd="100dp"
            android:fontFamily="@font/gothammedium1"
            android:textColor="@android:color/white"
            android:textSize="14sp"
            tools:ignore="RelativeOverlap" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/sonntagLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/samstagLayout"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="5dp">

        <Button
            android:id="@+id/sonntag"
            android:layout_width="300dp"
            android:layout_height="65dp"
            android:layout_centerHorizontal="true"
            android:backgroundTint="@color/black"
            android:text="@string/sonntag"
            android:textAlignment="viewStart"
            android:textSize="22sp" />

        <TextView
            android:id="@+id/doneSo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="25dp"
            android:layout_marginEnd="100dp"
            android:fontFamily="@font/gothammedium1"
            android:textColor="@android:color/white"
            android:textSize="14sp"
            tools:ignore="RelativeOverlap" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/notDone_and_future_appointmentsLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/sonntagLayout"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="0dp">


    </RelativeLayout>

    <Button
        android:id="@+id/openAppointments"
        android:layout_width="120dp"
        android:layout_height="65dp"
        android:gravity="center"
        android:layout_below="@+id/notDone_and_future_appointmentsLayout"
        android:layout_alignStart="@+id/notDone_and_future_appointmentsLayout"
        android:layout_alignEnd="@+id/notDone_and_future_appointmentsLayout"
        android:layout_alignBottom="@+id/sonntagLayout"
        android:layout_marginStart="-150dp"
        android:layout_marginTop="0dp"
        android:layout_marginEnd="6dp"
        android:layout_marginBottom="-64dp"
        android:backgroundTint="@color/black"
        android:text="@string/openAppointments"
         />
    <Button
        android:id="@+id/futureAppointments"
        android:layout_width="120dp"
        android:layout_height="65dp"
        android:gravity="center"
        android:layout_below="@+id/notDone_and_future_appointmentsLayout"
        android:layout_alignStart="@+id/notDone_and_future_appointmentsLayout"
        android:layout_alignEnd="@+id/notDone_and_future_appointmentsLayout"
        android:layout_alignBottom="@+id/sonntagLayout"
        android:layout_marginStart="8dp"
        android:layout_marginTop="0dp"
        android:layout_marginEnd="-151dp"
        android:layout_marginBottom="-64dp"
        android:backgroundTint="@color/black"
        android:text="@string/futureAppointments"
         />



</RelativeLayout>