<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/AddActivityLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">


    <EditText
        android:id="@+id/Beschreibung_edit_text"
        android:layout_width="270dp"
        android:layout_height="92dp"
        android:layout_below="@id/Terminname"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_centerInParent="true"
        android:layout_marginTop="369dp"
        android:layout_marginEnd="61dp"
        android:background="#C3B1B1"
        android:gravity="start"
        android:hint="  Beschreibung oder Todolist?\n  - Briefkasten checken \n  - Arzttermin 16:30 Uhr\n    .........." />

    <ImageButton
        android:id="@+id/imageButton"
        android:layout_width="65dp"
        android:layout_height="50dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:backgroundTint="#00F8F5F5"
        android:contentDescription="@string/back"
        app:srcCompat="?attr/homeAsUpIndicator"
        app:tint="#000000" />

    <TextView
        android:id="@+id/Terminname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="66dp"
        android:layout_marginTop="108dp"
        android:text="@string/terminname"
        android:textSize="20sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/Beschreibung"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/Wann"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="66dp"
        android:layout_marginTop="325dp"
        android:text="@string/beschreibung"
        android:textSize="20sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/Wann"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="66dp"
        android:layout_marginTop="236dp"
        android:text="@string/wann"
        android:textSize="20sp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/Terminname_edit_text"
        android:layout_width="270dp"
        android:layout_height="35dp"
        android:layout_below="@id/Terminname"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="62dp"
        android:layout_marginTop="148dp"
        android:background="#C3B1B1"
        android:gravity="start"
        android:hint="  wie heiÃŸt Ihr neuer Termin?" />

    <!-- TODO: Button impl -->
    <ImageButton
        android:id="@+id/Terminauswahl"
        android:layout_width="66dp"
        android:layout_height="66dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="226dp"
        android:layout_marginEnd="66dp"
        android:backgroundTint="#00F8F5F5"
        android:scaleType="fitXY"
        app:srcCompat="@android:drawable/ic_menu_today"
        app:tint="#000000" />

    <Spinner
        android:id="@+id/PrioListe"
        android:layout_width="270dp"
        android:layout_height="35dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="59dp"
        android:layout_marginBottom="252dp" />

    <!--   <Button
           android:id="@+id/SaveButton"
           android:layout_width="176dp"
           android:layout_height="58dp"
           android:layout_alignParentBottom="true"
           android:layout_centerInParent="true"
           android:layout_marginBottom="192dp"
           android:text="@string/speichern" /> -->

</RelativeLayout>